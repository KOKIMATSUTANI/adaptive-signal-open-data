# SUMO GUI container â€“ extends tram-sumo-base:latest
ARG BASE_IMAGE=tram-sumo-base:latest
FROM ${BASE_IMAGE}

USER root

# Install GUI/X11-specific runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libxrender1 \
    libxi6 \
    libxtst6 \
    libfontconfig1 \
    xauth \
    x11-apps \
    && rm -rf /var/lib/apt/lists/*

USER appuser
WORKDIR /app

# Entrypoint for SUMO GUI
ENTRYPOINT ["sumo-gui"]
